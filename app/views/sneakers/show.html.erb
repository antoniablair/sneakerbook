<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @sneaker.name %>
</p>

<p>
  <b>Description:</b>
  <%= @sneaker.description %>
</p>

<p>
  <b>Picture:</b>
  <%= image_tag(@sneaker.picture_url, :width => 300) if @sneaker.picture.present? %>
  <h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>
</p>

<p>
  <b>Designer:</b>
  <%= @sneaker.designer %>
</p>


